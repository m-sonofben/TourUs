<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/attractionsFragment">
    <fragment
        android:id="@+id/attractionsFragment"
        android:name="com.example.android.tourus.AttractionsFragment"
        android:label="fragment_attractions"
        tools:layout="@layout/fragment_attractions" >
        <action
            android:id="@+id/action_attractionsFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.android.tourus.MainActivity"
        android:label="fragment_hub"
        tools:layout="@layout/fragment_hub" />
</navigation>